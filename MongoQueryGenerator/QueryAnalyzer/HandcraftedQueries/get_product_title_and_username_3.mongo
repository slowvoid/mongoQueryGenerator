db.Product.explain('executionStats').aggregate([
    {$sort: {
        _id: 1
    }},
    {"$lookup": {
        from: 'User',
        foreignField: '_id',
        localField: 'UserID',
        as: 'data_User'
    }},
    {"$unwind": '$data_User'},
    {"$project": {
        _id: false,
        Title: true,
        UserName: '$data_User.UserName'
    }}
], {allowDiskUse: true})