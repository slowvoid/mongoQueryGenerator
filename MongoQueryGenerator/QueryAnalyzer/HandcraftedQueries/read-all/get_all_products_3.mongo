db.Product.aggregate([
    {"$lookup": {
        from: 'Store',
        foreignField: '_id',
        localField: 'StoreID',
        as: 'data_Store'
    }},
    {$unwind: '$data_Store'},
    {"$lookup": {
        from: 'User',
        foreignField: '_id',
        localField: 'UserID',
        as: 'data_User'
    }},
    {$unwind: '$data_User'}
], {allowDiskUse: true})