db.Product.aggregate([
    {"$match": {
        $expr: {
            $eq: ["$_id", "%DB_KEY%"]
        }
    }},
    {"$lookup": {
        from: 'Category',
        foreignField: '_id',
        localField: 'CategoryID',
        as: 'data_Category'
    }},
    {$unwind: '$data_Category'},
    {"$lookup": {
        from: 'User',
        foreignField: '_id',
        localField: 'UserID',
        as: 'data_User'
    }},
    {$unwind: '$data_User'}
], {allowDiskUse: true})